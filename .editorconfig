root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,css,scss,html}]
indent_size = 2

[*.{md,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
quote_type = single

[package.json]
indent_size = 2

[*.min.js]
indent_style = ignore
trim_trailing_whitespace = ignore
